<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerPlace"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgPlace"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/charactersprite_aaron" />

    <TextView
        android:id="@+id/nomePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgPlace"
        android:textSize="@dimen/normal" />
    
    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgPlace"
        android:layout_below="@+id/nomePlace"
        android:textSize="@dimen/small" />
    
   <ImageView
        android:id="@+id/imgBadge"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/level"
        android:layout_toRightOf="@+id/imgPlace"
                android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="26dp"
        android:src="@drawable/badge_boulder" />

</RelativeLayout>